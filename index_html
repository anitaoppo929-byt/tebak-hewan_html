<body>

<div class="container" id="gameContainer">
    <h1>Tantangan Tebak Hewan</h1>
    <img id="animal1" class="animal-img" src="" alt="Hewan 1">
    <img id="animal2" class="animal-img" src="" alt="Hewan 2">
    <br>
    <input type="text" id="guessInput" placeholder="Tebak nama hewan...">
    <button onclick="checkGuess()">Tebak!</button>
    <p id="result"></p>
    <button onclick="nextLevel()">Level Berikutnya</button>
</div>

<div class="container" id="gameOver">
    <h1>Game Selesai!</h1>
    <button onclick="restartGame()">Main Lagi</button>
</div>

<script>
const animals = [
    {name:"kucing", src:"images/kucing.jpg"},
    {name:"anjing", src:"images/anjing.jpg"},
    {name:"gajah", src:"images/gajah.jpg"},
    {name:"singa", src:"images/singa.jpg"}
];

let level = 0;
let currentAnimals = [];

const animal1 = document.getElementById('animal1');
const animal2 = document.getElementById('animal2');
const guessInput = document.getElementById('guessInput');
const result = document.getElementById('result');
const gameContainer = document.getElementById('gameContainer');
const gameOver = document.getElementById('gameOver');

function startLevel(){
    if(level >= animals.length/2){
        gameContainer.style.display = 'none';
        gameOver.style.display = 'block';
        return;
    }
    currentAnimals = animals.slice(level*2, level*2+2);
    animal1.src = currentAnimals[0].src;
    animal2.src = currentAnimals[1].src;
    animal1.classList.remove('revealed');
    animal2.classList.remove('revealed');
    guessInput.value = '';
    result.textContent = '';
}

function checkGuess(){
    const guess = guessInput.value.toLowerCase();
    let correct = false;
    currentAnimals.forEach((a,i)=>{
        const img = i===0 ? animal1 : animal2;
        if(guess === a.name){
            img.classList.add('revealed');
            correct = true;
        }
    });
    result.textContent = correct ? "Benar!" : "Salah, coba lagi.";
}

function nextLevel(){
    if(animal1.classList.contains('revealed') && animal2.classList.contains('revealed')){
        level++;
        startLevel();
    } else {
        alert("Tebak semua hewan dulu!");
    }
}

function restartGame(){
    level=0;
    gameOver.style.display='none';
    gameContainer.style.display='block';
    startLevel();
}

startLevel();
</script>
</body>
</html>

    .menu-container, .game-container {
