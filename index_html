<!-- Menu Utama -->
<div class="menu-container" id="menu">
    <h1>Tantangan</h1>
    <button class="btn" onclick="startGame()">Mulai</button>
    <button class="btn" onclick="showInstructions()">Petunjuk</button>
</div>

<!-- Halaman Game -->
<div class="game-container hidden" id="game">
    <h1>Permainan Dimulai!</h1>
    <p>Ini adalah tampilan game. Nanti kamu bisa tambahkan level, koin, atau tebakan hewan di sini.</p>
    <button class="btn" onclick="backToMenu()">Kembali ke Menu</button>
</div>

<script>
    function startGame() {
        document.getElementById('menu').classList.add('hidden');
        document.getElementById('game').classList.remove('hidden');
    }

    function backToMenu() {
        document.getElementById('game').classList.add('hidden');
        document.getElementById('menu').classList.remove('hidden');
    }

    function showInstructions() {
        alert("Cara Bermain:\n1. Tebak hewan/angka.\n2. Gunakan petunjuk jika bingung.\n3. Kumpulkan poin dan selesaikan level!");
    }
</script>

