<body>

<h1>Tebak Hewan</h1>
<p>Masukkan tebakanmu:</p>
<input type="text" id="guess" placeholder="Misal: Kucing">
<button onclick="checkGuess()">Tebak!</button>

<p id="message"></p>

<script>
    const animals = ["kucing", "anjing", "gajah", "sapi", "kuda"];
    const randomAnimal = animals[Math.floor(Math.random() * animals.length)];

    function checkGuess() {
        const guess = document.getElementById("guess").value.toLowerCase();
        const message = document.getElementById("message");

        if (guess === "") {
            message.textContent = "Tolong masukkan tebakan!";
        } else if (guess === randomAnimal) {
            message.textContent = "üéâ Benar! Hewannya adalah " + randomAnimal + "!";
        } else {
            message.textContent = "‚ùå Salah! Coba lagi.";
        }
    }
</script>

